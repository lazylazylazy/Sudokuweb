
<html>
<head>
	<h1>Sudoku</h1>
	<title>Sukoku</title>
	<link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
	<blink>Is it worth it?</blink>
</head>
<body>
<div id="sudoku">
	<form action="/" method="post">
	<% 3.times do |row| %>
		<div class="row">
			<% 3.times do |box| %>
				<div class="box">
					<%3.times do |cell_row|%>
						<div class="cell_row">
							<% 3.times do |cell|%>
								<div class="cell">
									<% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
									<% cell_value = @current_solution[cell_index] %>
									<% colour_class = colour_class(@check_solution, @puzzle[cell_index], @current_solution[cell_index], @solution[cell_index]) %>
									<input type="text" maxlength="2" name="cell[]"autocomplete="off" value="<%= cell_value %>" class="<%=colour_class%>">
									<content></content>
									<aside></aside>
								</div>
							<% end %>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
	<% end %>
	<button>Check solution!</button>
	</form>
</div>
</body>
</html>
